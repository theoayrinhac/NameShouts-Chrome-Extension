{
  "manifest_version": 2,

  "name": "NameShouts Chrome Extension",
  "description": "This extension uses the NameShouts API to includ name pronunciation for HubSpot",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://app.hubspot.com/*/contact/*"],
      "js": ["content/jquery.js", "content/content.js"],
      "css": ["content/vocalizer_style.css", "content/balloon.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage"
  ],
  "web_accessible_resources": ["img/NSEar.svg", "img/NSInformation.svg", "img/NSPlayButton.svg"]
}