{
  "manifest_version": 2,

  "name": "NameShouts Chrome Extension",
  "description": "This extension uses the NameShouts API to includ name pronunciation for HubSpot",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://app.hubspot.com/contacts/*"],
      "js": ["jquery.js", "content.js", "livejquery.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}